<header>
    <ul class="nav">
        <li class="nav-item">
            <a class="nav-link active" href="#">
                <h3>Sistema de Passagens de Ônibus</h3>
            </a>
        </li>
        <div class="container-voltar">
            <li class="nav-item">
                <a href="/" class="nav-link btn btn-danger">Voltar</a>
            </li>
        </div>
    </ul>
</header>



<div class="menu-insercao container">
    <form class="form-inline" action="/addRota" method="POST">
        <div class="form-group">
            <input class="form-control" name="tempoViagem" type="text" placeholder="Tempo de viagem" autocomplete="off"
                maxlength="40">
            <input class="form-control" name="dataHoraViagem" type="text" placeholder="Data e Hora da Viagem" autocomplete="off"
                maxlength="40">
            <input class="form-control" name="origem" type="text" placeholder="Id da cidade de Origem" autocomplete="off"
                maxlength="40">
                <input class="form-control" name="destino" type="text" placeholder="Id da cidade Destino" autocomplete="off"
                maxlength="40">
            <input class="form-control" name="idOnibus" placeholder="ID do Bus" type="text" autocomplete="off">

        </div>
        <button class="btn btn-primary" type="submit">Adicionar</button>
    </form>
</div>

<div class="menu-buscar container">
    <form class="form-inline" action="/buscarRota" method="POST">
        <div class="form-group">
            <select class="form-control selectBusca" name="tipoBusca">
                <option value="origem">ID Cidade de Origem</option>
                <option value="destino">ID Cidade de Destino</option>
            </select>
            <input class="form-control inputBusca" name="valorBusca" type="text" step="0.01" autocomplete="off">
            <button class="btn btn-outline-success" type="submit">Buscar</button>
        </div>
    </form>
</div>



<div class="tab-content container" id="nav-tabContent">
    <div class="tab-pane fade show active container" id="nav-items" role="tabpanel" aria-labelledby="nav-items-tab">
        <div class="container">
            <div class="card tabela">
                <div class="card-header">
                    <h3 class="card-title">Tabela Rotas</h3>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Tempo de viagem</th>
                            <th>Data e Hora da viagem</th>
                            <th>Origem</th>
                            <th>Destino</th>
                            <th>Onibus</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each rows}}
                        <tr identificador={{idrota}}>
                            <td class="rowData" contenteditable="false">{{tempoviagem}}</td>
                            <td class="rowData" contenteditable="false">{{datahoraviagem}}</td>
                            <td class="rowData" contenteditable="false">{{origem}}</td>
                            <td class="rowData" contenteditable="false">{{destino}}</td>
                            <td class="rowData" contenteditable="false">{{idonibus}}</td>
                            <td id="actions">
                                <a class="add" title="Add" data-toggle="tooltip"><i
                                        class="material-icons">&#xE03B;</i></a>
                                <a class="edit" title="Edit" data-toggle="tooltip"><i
                                        class="material-icons">&#xE254;</i></a>
                                <a class="delete" title="Delete" data-toggle="tooltip"><i
                                        class="material-icons">&#xE872;</i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>