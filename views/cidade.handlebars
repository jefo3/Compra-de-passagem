<div class="menu-insercao container">
    <form class="form-inline" action="/addCidade" method="POST">
        <div class="form-group">
            <input class="form-control" name="nome" type="text" placeholder="Cidade" autocomplete="off"
                maxlength="40">
            <input class="form-control" name="estado" type="text" placeholder="Estado" autocomplete="off"
                maxlength="40">
        </div>
        <button class="btn btn-primary" type="submit">Adicionar</button>
    </form>
</div>

<div class="menu-buscar container">
    <form class="form-inline" action="/buscarCidade" method="POST">
        <div class="form-group">
            <select class="form-control selectBusca" name="tipoBusca">
                <option value="nome">Cidade</option>
                <option value="estado">Estado</option>
            </select>
            <input class="form-control inputBusca" name="valorBusca" type="text" step="0.01" autocomplete="off">
            <button class="btn btn-outline-success" type="submit">Buscar</button>
        </div>
    </form>
</div>



<div class="tab-content container" id="nav-tabContent">
    <div class="tab-pane fade show active container" id="nav-items" role="tabpanel" aria-labelledby="nav-items-tab">
        <div class="container">
            <div class="card tabela">
                <div class="card-header">
                    <h3 class="card-title">Tabela Cidades</h3>
                </div>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Cidade</th>
                            <th>Estado</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each rows}}
                        <tr identificador={{idcidade}}>
                            <td class="rowData" contenteditable="false">{{nome}}</td>
                            <td class="rowData" contenteditable="false">{{estado}}</td>
                            <td id="actions">
                                {{!-- <a class="add" title="Add" data-toggle="tooltip"><i
                                        class="material-icons">&#xE03B;</i></a>
                                <a class="edit" title="Edit" data-toggle="tooltip"><i
                                        class="material-icons">&#xE254;</i></a> --}}
                                <a class="delete" title="Delete" data-toggle="tooltip"><i
                                        class="material-icons">&#xE872;</i></a>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>